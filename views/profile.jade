    script(src='https://npmcdn.com/masonry-layout@4.0/dist/masonry.pkgd.min.js')
    script(src='https://npmcdn.com/imagesloaded@4.1/imagesloaded.pkgd.min.js')
    script(type="text/javascript", src="/js/profile.js")
